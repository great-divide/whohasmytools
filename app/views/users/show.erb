<h1>Welcome, <%= @user.username%>!</h1>


<h3>Current Contracts</h3>
	<h2>Loans</h2>
	<!-- make HTML list -->
		<% if @user.loaner_contracts.empty? %>
			<p>You are not loaning any tools right now.</p>
		<% else%>
			<% @user.loaner_contracts.each.with_index(1) do |c, index| %>
				<!-- later on... add a date... due date? -->
				<p><%= "#{index}. You loaned your #{c.tool} to #{c.borrower}." %></p>
			<% end %>
		<% end %>


	<h2>Borrows</h2>
	<!-- make HTML list -->
		<% if @user.borrower_contracts.empty? %>
			<p>You are not borrowing any tools right now.</p>
		<% else %>
			<% @user.borrower_contracts.each.with_index(1) do |c, index| %>
				<p><%= "#{index}. You are borrowing a #{c.tool} from #{c.loaner}" %></p>
			<% end %>
		<% end %>

<h3>My Tools</h3>
	<% @user.tools.each do |t| %>
	<p><b><%= t.name %>:</b> <%= t.description %></p>
	<% end %>

<h3>Add Some Tools to Loan to Your friends</h3>
	<form action="/tools/new" method="POST">
		<p>Tool: <input type="text" name="tool[name]"></p>
		<p>Description (optional): <input type="text" name="tool[description]"></p>
		<p><input type="submit" name="Add to my Toolbox"></p>
	</form>
<h3>Loan a Tool to a Friend</h3>
	<form>
		<p>Borrower: <input type="text" name="borrower"></p>
		<p>Tool: <input type="text" name="tool"></p>
		<p><input type="submit" name="Loan it Out!"></p>
	</form>